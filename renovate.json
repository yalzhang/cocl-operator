{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>konflux-ci/mintmaker//config/renovate/renovate.json"
  ],
  "automerge": false,
  "platformAutomerge": false,
  "ignoreTests": false,
  "rebaseWhen": "conflicted",
  "ignorePaths": ["drift-cache"],
  "dockerfile": {
    "enabled": false
  },
  "packageRules": [
    {
      "description": "Group all COCL component nudges into single PR and automerge",
      "matchFileNames": [
        "bundle/update-bundle.sh"
      ],
      "automerge": true,
      "platformAutomerge": false,
      "groupName": "cocl-component-images"
    }
  ]
}
