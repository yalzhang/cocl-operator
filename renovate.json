{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>konflux-ci/mintmaker//config/renovate/renovate.json"
  ],
  "automerge": false,
  "platformAutomerge": false,
  "ignoreTests": false,
  "rebaseWhen": "conflicted",
  "ignorePaths": ["drift-cache"],
  "dockerfile": {
    "enabled": false
  },
  "packageRules": [
    {
      "description": "Group all COCL component nudges into single PR and automerge",
      "matchPackagePatterns": [
        "quay.io/redhat-user-workloads/cocl-operator-tenant/*"
      ],
      "groupName": "cocl-component-images",
      "groupSlug": "cocl-component-images",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
